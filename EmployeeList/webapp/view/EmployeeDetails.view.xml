<mvc:View controllerName="logaligroup.EmployeeList.controller.EmployeeDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page title="{i18n>employeeDetails}">

        <Panel >
            <FlexBox height="65px" alignItems="Center" justifyContent="Center">
                <items>
                    <Text text="{odataNorthwind.svc>TitleofCourtesy} {odataNorthwind.svc>LastName}, {odataNorthwind.svc>FirstName}" class="boldText"></Text>
                </items>
            </FlexBox>

            <FlexBox height="65px" alignItems="Start" justifyContent="SpaceBetween">
                <items>
                    <VBox>
                        <Text text="{i18n>employeeID}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{odataNorthwind.svc>EmployeeID}"/>
                    </VBox>
                    <VBox >
                        <Text text="{i18n>titleEmployee}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{odataNorthwind.svc>Title}"/>
                    </VBox>
                </items>
            </FlexBox>

            <FlexBox >
                <items>
                    <HBox>
                        <Text text="{i18n>countryCode}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{odataNorthwind.svc>Country}"/>
                        <layoutData>
                            <FlexItemData growFactor="3"></FlexItemData>
                        </layoutData>
                    </HBox>
                    <HBox>
                        <Text text="{i18n>city}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{odataNorthwind.svc>City}"/>
                         <layoutData>
                            <FlexItemData growFactor="2"></FlexItemData>
                        </layoutData>
                    </HBox>
                    <FlexBox direction="Row" alignItems="Start">
                        <Text text="{i18n>postalCode}" class="boldText sapUiTinyMarginEnd"/>
                        <Text text="{odataNorthwind.svc>PostalCode}"/>
                        <layoutData>
                            <FlexItemData growFactor="1"></FlexItemData>
                        </layoutData>
                    </FlexBox>
                </items>
            </FlexBox>
        </Panel>

        <Panel class="sapUiSizeCompact" backgroundDesign="Transparent">
            <headerToolbar>
                <Toolbar >
                    <Title text="{i18n>incidence} {= ${odataNorthwind.svc>Country} !== 'USA' ? ${i18n>europe} : ${i18n>usa}}"/>
                        <ToolbarSpacer ></ToolbarSpacer>
                            <Button text="{i18n>createIncidence}" press="onCreateIncidence"/>
                </Toolbar>
            </headerToolbar>
                <Panel id="tableIncidence" class="sapUiNoContentPadding" backgroundDesign="Transparent"/>
        </Panel>
    </Page>
</mvc:View>