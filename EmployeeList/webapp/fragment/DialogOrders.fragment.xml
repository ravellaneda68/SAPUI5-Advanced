<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog title="{i18n>orders}">
        <content>
            <Table items="{odataNorthwind.svc>Orders}" width="700px">
                <columns>

                    <Column>
                        <header>
                            <Label text="{i18n>orderID}"/>
                        </header>
                    </Column>

                    <Column>
                        <header>
                            <Label text="{i18n>freight}"/>
                        </header>
                    </Column>

                    <Column>
                        <header>
                            <Label text="{i18n>shipAddress}"/>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Label text="{odataNorthwind.svc>OrderID}"/>
                            <Label text="{odataNorthwind.svc>Freight}"/>
                            <Label text="{odataNorthwind.svc>ShipAddress}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <endButton>
            <Button text="{i18n>close}" press="onCloseOrders"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>